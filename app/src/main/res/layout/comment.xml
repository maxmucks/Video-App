<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?BackgroundColor"
    android:layout_marginBottom="5dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout_comment_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_comment"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person_flat"
            android:layout_marginTop="10dp"
            />

        <LinearLayout

            android:id="@+id/linearLayout_description_comment_adapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/imageView_comment"
            android:orientation="vertical">

            <TextView
                android:layout_marginBottom="5dp"
                android:id="@+id/txt_title"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/app_name"
                android:textColor="?Titel_2"
                android:textSize="16dp" />

            <RelativeLayout
                android:backgroundTint="?BackgroundColor_S"
                android:padding="8dp"
                android:background="@drawable/bg_round_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView_comment_adapter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="?Titel_1"
                    android:textSize="18dp"
                    android:includeFontPadding="false"
                    tools:ignore="MissingPrefix" />




            </RelativeLayout>



        </LinearLayout>


    </RelativeLayout>
    <View
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
       android:layout_marginTop="8dp"
        android:layout_below="@id/textView_comment_adapter"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="?Boder"/>

</LinearLayout>