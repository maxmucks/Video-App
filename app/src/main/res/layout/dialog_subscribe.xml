<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:id="@+id/relativeLayout_close_rate_gialog"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="?BackgroundColor_S"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="5dp"
                        app:srcCompat="@drawable/ic_subscribe"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:tint="?BackgroundTint" />
                    <TextView
                        android:textColor="?BackgroundTint"
                        android:textStyle="bold"
                        android:gravity="center|left"
                        android:textSize="16dp"
                        android:text="Premium Pack"
                        android:layout_marginLeft="55dp"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:background="?Boder"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dialog_content"
            android:orientation="vertical"
            android:layout_below="@+id/LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textColor="?Titel_2"
                android:padding="13dp"
                android:text="@string/description_subsribte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:background="?Boder"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"/>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    app:srcCompat="@drawable/ic_block"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:tint="?BackgroundTint" />
                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:orientation="vertical"
                    android:layout_height="35dp"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:textSize="16dp"
                        android:gravity="center|left"
                        android:textStyle="bold"
                        android:textColor="?Titel_1"
                        android:text="@string/dialog_text_no_ads_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:textSize="12dp"
                        android:gravity="center|left"
                        android:textStyle="bold"
                        android:textColor="?Titel_2"
                        android:text="@string/dialog_text_no_ads_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/dialog_content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout

                android:layout_centerHorizontal="true"
                android:background="@drawable/gradient_dialog_btn_go"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:id="@+id/text_view_go_pro"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="SUBSCRIBE NOW"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>